= form_for @raza do |f|
  - if @raza.errors.any?
    #error_explanation
      %h2= "#{pluralize(@raza.errors.count, "error")} prohibited this raza from being saved:"
      %ul
        - @raza.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .actions
    = f.submit 'Save'
