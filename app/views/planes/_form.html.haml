= form_for @plan, :html => { class: 'form-horizontal', role: 'fordb/migrate/20131119172026_create_dise√±os.rbm' } do |f|
  - if @plan.errors.any?
    #error_explanation
      %h2= "#{pluralize(@plan.errors.count, "error")}"
      %ul
        - @plan.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :dias, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :dias, class: 'form-control'
  .form-group
    = f.label :precio, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :precio, class: 'form-control'
  .form-group
    = f.label :descripcion, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :descripcion, class: 'form-control'
  .actions
    = f.submit 'Guardar', class: 'btn btn-default'
