= form_for @distrito do |f|
  - if @distrito.errors.any?
    #error_explanation
      %h2= "#{pluralize(@distrito.errors.count, "error")} prohibited this distrito from being saved:"
      %ul
        - @distrito.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .actions
    = f.submit 'Save'
