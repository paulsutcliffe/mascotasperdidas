= form_for @testimonio do |f|
  - if @testimonio.errors.any?
    #error_explanation
      %h2= "#{pluralize(@testimonio.errors.count, "error")} prohibited this testimonio from being saved:"
      %ul
        - @testimonio.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :foto
    = f.text_field :foto
  .field
    = f.label :contenido
    = f.text_area :contenido
  .field
    = f.label :nombre
    = f.text_field :nombre
  .actions
    = f.submit 'Save'
