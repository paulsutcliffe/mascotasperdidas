
#carousel-2.carousel.slide
  
  %ol.carousel-indicators
    - @slides.each_with_index do |slide, index|
      - if index == 0
        %li.active{:'data-target' => '#carousel-generic-2', :'data-slide-to' => index}
      - else
        %li{:'data-target' => '#carousel-generic-2', :'data-slide-to' => index}

  .carousel-inner
    - @slides.each_with_index do |slide, index|
      - if index == 0
        .item.active
          = image_tag slide.imagen_url(:full)
          = admin_controls('Editar', edit_slide_path(slide), 'down')       
          - if current_admin
            = link_to 'Eliminar', slide, :method => :delete, :data => { :confirm => '¿Estas Seguro?' }
      - else
        .item
          = image_tag slide.imagen_url(:full)
       
          = admin_controls('Editar', edit_slide_path(slide), 'down')       
          - if current_admin
            = link_to 'Eliminar', slide, :method => :delete, :data => { :confirm => '¿Estas Seguro?' }

