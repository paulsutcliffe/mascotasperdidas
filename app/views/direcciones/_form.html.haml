= form_for @direccion, :html => { class: 'form-horizontal', role: 'fordb/migrate/20131119172026_create_dise√±os.rbm' } do |f|
  - if @direccion.errors.any?
    #error_explanation
      %h2= "#{pluralize(@direccion.errors.count, "error")}"
      %ul
        - @direccion.errors.full_messages.each do |msg|
          %li= msg

  .form-group
