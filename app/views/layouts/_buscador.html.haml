= form_tag resultado_de_busqueda_path, method: :get, class: 'form' do

  .form-group.form-group-first
    .inner
      .form-group
        .col-sm-10
          = text_field_tag :busqueda, params[:busqueda], class: 'form-control'
        .col-sm-2
          = submit_tag "BUSCAR", name: nil, class: 'btn btn-default'

      .form-group.form-check.form-last
        .col-sm-8
          %label Perdido
          = check_box_tag :tipo, 'Perdido'
      
          %label Encontrado
          = check_box_tag :tipo, 'Encontrado'
