= form_for @imagen do |f|
  - if @imagen.errors.any?
    #error_explanation
      %h2= "#{pluralize(@imagen.errors.count, "error")} prohibited this imagen from being saved:"
      %ul
        - @imagen.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :imagen
    = f.text_field :imagen
  .actions
    = f.submit 'Save'
