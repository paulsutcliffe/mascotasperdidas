= form_for @portada do |f|
  - if @portada.errors.any?
    #error_explanation
      %h2= "#{pluralize(@portada.errors.count, "error")} prohibited this portada from being saved:"
      %ul
        - @portada.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :imagen
    = f.text_field :imagen
  .actions
    = f.submit 'Save'
